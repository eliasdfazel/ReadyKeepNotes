<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/temporaryBackground">

        <shape
            android:shape="rectangle">

            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="@color/dark"
                android:centerColor="@color/dark"
                android:endColor="@color/dark_transparent_high"/>

        </shape>
    </item>

    <item
        android:id="@+id/temporaryForeground"
        android:bottom="5dp">

        <shape
            android:shape="rectangle">

            <corners
                android:bottomLeftRadius="9dp"
                android:bottomRightRadius="9dp"/>

            <solid
                android:color="@color/light"/>

        </shape>
    </item>

    <item>
        <ripple
            android:color="@color/default_color_dark">
            <item
                android:height="2dp"
                android:gravity="bottom"
                android:start="80dp">
                <shape android:shape="oval">
                    <solid android:color="@color/light" />
                    <gradient
                        android:angle="270"
                        android:endColor="@color/light"
                        android:startColor="@color/dark_transparent_higher" />
                </shape>
            </item>

            <item
                android:id="@android:id/mask"
                android:height="2dp"
                android:gravity="bottom|center_horizontal"
                android:start="80dp">
                <shape android:shape="oval">
                    <solid android:color="@color/default_color_dark" />
                </shape>
            </item>
        </ripple>
    </item>

</layer-list>